/* app.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 通用按钮样式 */
.btn {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  cursor: pointer;
}

.btn-primary {
  background-color: #007aff;
  color: white;
}

.btn-danger {
  background-color: #ff3b30;
  color: white;
}

.btn-success {
  background-color: #4cd964;
  color: white;
}